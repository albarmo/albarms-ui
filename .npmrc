# Default registry
registry=https://registry.npmjs.org/

# Always save exact version
save-exact=true

# Disable package-lock if needed (optional)
# package-lock=false

# Ignore optional dependencies if you want
# optional=false

# Strict SSL for security
strict-ssl=true

# Set fetch retries
fetch-retries=3
fetch-retry-factor=10
fetch-retry-mintimeout=1000
fetch-retry-maxtimeout=60000

# Set cache folder
cache=.npm-cache

# Log level (silent, error, warn, info, verbose)
loglevel=warn
